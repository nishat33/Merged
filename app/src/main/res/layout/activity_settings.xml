                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/Calling"
                        android:switchMinWidth="50dp"/>


                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51A0A1"

    android:id="@+id/dashboard"

    tools:context=".Dashboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:id="@+id/rounded"
            android:layout_width="match_parent"
            android:layout_height="600dp"

            android:background="@drawable/backgroundfile"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="3dp">

            <ImageButton
                android:id="@+id/noti_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/message"
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/noti_button"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/objectbutton"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#62B6B7"
                    android:orientation="vertical"
                    app:cardCornerRadius="@android:dimen/app_icon_size">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/finalobject">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/belgrano"
                        android:padding="10dp"
                        android:text="Object Detection"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat">

                    </TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/TextButton"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#62B6B7"
                    android:orientation="vertical"
                    app:cardCornerRadius="@android:dimen/app_icon_size">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/finalread">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/belgrano"
                        android:padding="10dp"
                        android:text="Text Recognition"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat">

                    </TextView>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/row1"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/places"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#62B6B7"
                    android:orientation="vertical"
                    app:cardCornerRadius="@android:dimen/app_icon_size">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/belgrano"
                        android:paddingTop="10dp"
                        android:text="Location"

                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat">

                    </TextView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:paddingTop="10dp"
                        android:src="@drawable/finalmap" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Message"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#62B6B7"
                    android:orientation="vertical"
                    app:cardCornerRadius="@android:dimen/app_icon_size">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/finalmessage">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/belgrano"
                        android:paddingTop="10dp"
                        android:text="Message"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat">

                    </TextView>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">


            <ImageButton

                android:id="@+id/CallButton"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:backgroundTint="#00E80B56"
                android:scaleType="fitCenter"

                app:srcCompat="@drawable/telephone" />

            <ImageButton
                android:id="@+id/AlertButton"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/dangerous"
                tools:ignore="MissingConstraints"
                tools:visibility="visible" />


            <ImageButton
                android:id="@+id/Settings"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/adjustment"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>